<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="@dimen/default_margin"
	android:orientation="vertical">

	<TextView
		android:id="@+id/flight_departure_city_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/default_half_margin"
		android:padding="@dimen/default_margin"
		android:background="@drawable/city_button_background"
		android:text="Куда лететь"
		android:textSize="18dp"/>

	<TextView
		android:id="@+id/flight_destination_city_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/default_half_margin"
		android:padding="@dimen/default_margin"
		android:background="@drawable/city_button_background"
		android:text="Откуда вылет"
		android:textSize="18dp"/>

	<Button
		android:id="@+id/flight_apply_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="Поиск"
		android:textColor="@color/white"
		android:backgroundTint="@color/colorPrimary"/>

</LinearLayout>